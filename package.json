{
  "name": "foal",
  "version": "0.1.0",
  "description": "a dsl for dice rolls",
  "main": "./entry.js",
  "repository": "https://github.com/calamitizer/foal.git",
  "keywords": [
    "🐴",
    "❓",
    "🎲",
    "💯"
  ],
  "scripts": {
    "compile": "nearleyc ./src/foal.ne -o ./src/foal.js",
    "test-str": "nearley-test ./src/foal.js -qi",
    "ct-str": "yarn compile && yarn test-str",
    "lint": "eslint . || exit 0",
    "test": "ava || exit 0",
    "build": "yarn lint && yarn compile && yarn test"
  },
  "ava": {
    "files": [
      "./tests/**/*.js",
      "!**/*[eE]xpectations*"
    ]
  },
  "dependencies": {
    "moo": "^0.4.3",
    "nearley": "^2.13.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "eslint": "^4.18.2"
  },
  "author": "alex ruble",
  "license": "MIT"
}
